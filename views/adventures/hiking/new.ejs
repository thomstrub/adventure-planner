<%- include('../partials/header') %>

<body>
    <%- include('../partials/nav') %>
    <div class="container">
        <div>
            <h1>Plan an Adventure</h1>
        </div>
        <form action="/adventures/hiking" method="POST">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" name="name">
            </div>

            <div class="form-group">
                <label>Primary Region: </label>
                    <select name="region[0].primary">
                        <option value="" selected>Choose a region</option>
                        <% region.primary.forEach((r) => { %>
                            <option value="<%=r%>"><%=r%></option>
                        <% }) %>
                    </select>
                
                <label>Secondary Region: </label>
                    <select name="region[0].secondary">
                        <option value="" selected>Choose a region</option>
                        <% region.secondary.forEach((r) => { %>
                            <option value="<%=r%>"><%=r%></option>
                        <% }) %>
                    </select>
                
                <label>Sub Region: </label>
                    <select name="region[0].subRegion">
                        <option value="" selected>Choose a region</option>
                        <% region.subRegion.forEach((r) => { %>
                            <option value="<%=r%>"><%=r%></option>
                        <% }) %>
                    </select>
            </div>
            <div class="form-group"> 
                
                <label>Elevation Gain:</label>
                <input type="text" name="elevationGain">

                <label>High Point:</label>
                <input type="text" name="highPoint">

                <label>Round Trip:</label>
                <input type="text" name="roundtrip">
            </div>
            <div class="form-group">
                <label>Features:</label>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" class="form-check-input" id="epic-view" name="features" value="Epic View Point" checked>
                        <label class="form-check-label" for="epic-view">Epic View</label>
                        <input type="checkbox" class="form-check-input" id="water-feature" name="features" value="Cool Water Feature">
                        <label class="form-check-label" for="water-feature">Cool Water Feature</label>
                    </div>
                    
                <label>Earliest Hikeable Month</label>
                    <select name="meltout">
                        <option value="" selected>Select a Month</option>
                        <option value="May">May</option>
                        <option value="June">June</option>
                        <option value="July">July</option>
                        <option value="August">August</option>
                    </select>
                <label>Travel Time</label>
                    <input type="text" name="travelTime">
                <label>Popularity</label>
                    <select name="popularity">
                        <option value="Low" selected>Low</option>
                        <option value="Medium-Low">Medium-Low</option>
                        <option value="Medium">Medium</option>
                        <option value="Too Popular">Too Popular</option>
                    </select>
                <div class="form-check form-check-inline">
                    <input type="checkbox" class="form-check-input" id="waterSources" name="waterSources" checked>
                    <label class="form-check-label" for="waterSources">Dependable Water Sources</label>
                    <input type="checkbox" class="form-check-input" id="river-crossing" name="riverCrossings" checked>
                    <label class="form-check-label" for="river-crossing">Known River Crossings</label>
                </div>
                <label>Forecast Link:</label>
                <input type="text" name="weatherLink">
                <label>Map Link:</label>
                <input type="text" name="mapLink">
                <label>Photo Link:</label>
                <input type="text" name="photoLink">
                <label>Review Link</label>
                <input type="text" name="reviewLink">
                <div class="form-check form-check-inline">
                    <input type="checkbox" class="form-check-input" id="scrambling" name="scrambling" checked>
                    <label class="form-check-label" for="scrambling">Scrables On This Route</label>
                    <input type="checkbox" class="form-check-input" id="car-camping" name="carCamping" checked>
                    <label class="form-check-label" for="car-camping">Good Car-Camping Spots Nearby</label>
                </div>
            </div>
            
            <input type="submit" value="Add Hike">
        </form>
    </div><!---container-->
    
</body>
<%- include('../partials/footer') %>

</html>
<%- include('../partials/header') %>

<body>
    <%- include('../partials/nav') %>
    <div class="container-flex login-bg">
    <div class="container index-bg">
        <div class="show-page">
            <h1><%= hike.name%></h1>

<!------------Edit / Delete requests------------------->

            <div class="show-page">
                <div class="btn btn-primary div-button">
                    <a href="/adventures/hiking/<%=hike.id%>/edit">Edit</a>
                </div>
        
                <form action="/adventures/hiking/<%= hike._id %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button class="btn btn-primary" type="submit">Delete</button>
                </form>
            </div>
            
        </div>
        <div class="row">
            <div class="col center">
                <div>
                    <img class="show-pic" src=<%= hike.photoLink%> title="<%=hike.name%>" >
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 offset-1">
                <div>
                        <div>
                            <div class="row">
                                <div class="col">
                                    <h3>Primary Region:</h3>
                                    <p><%=hike.region[0].primary%></p>
                                </div>
                                <div class="col">
                                    <h3>Secondary Region:</h3>
                                    <p><%=hike.region[0].secondary%></p>
                                </div>
                                <div class="col">
                                    <h3>Sub-Region:</h3>
                                    <p><%=hike.region[0].subRegion%></p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <h3>Number of Days:</h3>
                                    <p>Day Hike</p>
                                </div>
                                <div class="col">
                                    <h3>Total Eleveation Gain:</h3>
                                    <p><%=hike.elevationGain%></p>
                                </div>
                                <div class="col">
                                    <h3>Highest Point</h3>
                                    <p><%=hike.highPoint%></p>
                                </div>
                                <div class="col">
                                    <h3>Roundtrip Distance</h3>
                                    <p><%=hike.roundtrip%></p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <h3>Features:</h3>
                                    <p>
                                        <%= hike.features.length < 2 ? hike.features[0] : 'This hike has it all'%>

                                    </p>
                                </div>
                                <div class="col">
                                    <h3>Earliest Melt-out:</h3>
                                    <p><%=hike.meltout%></p>
                                </div>
                                <div class="col">
                                    <h3>Travel Time from Home:</h3>
                                    <p><%=hike.travelTime%></p>
                                </div>
                            </div>

                            <!---Booleans----->
                            <div class="row">
                                <div class="col">
                                    <h4>
                                        <%= hike.waterSources ? 'There are known water sources' : 'No known water sources'%>

                                    </h4>
                                    
                                </div>
                                <div class="col">
                                    <h4>
                                        <%= hike.riverCrossings ? 'Substantial river / creek crossings.' : 'No known river crossings.'%>
                                    </h4>
                                </div>
                                <div class="col">
                                    <h4>
                                        <%= hike.scrambling ? 'There are scrambles on this route.' : 'No anticipated scrambles.'%>
                                    </h4>
                                </div>
                                <div class="col">
                                    <h4>
                                        <%= hike.carCamping ? 'There is car camping nearby.' : 'No known worthwhile car-camp spots.'%>
                                    </h4>
                                </div>
                            </div>
                            
                            <!---Links----->
                            <div class="row">
                                <div class="col"><h4>Links:</h4></div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <a href="<%=hike.weatherLink%>">Weather Forecast</a>
                                </div>
                                <div class="col">
                                    <a href="<%=hike.reviewLink%>">Trip Reports</a>
                                </div>
                                <div class="col">
                                    <a href="<%=hike.mapLink%>">Directions</a>
                                </div>
                            </div>

                            <div class="row">
                                <%if(hike.relatedAdventures.length > 0){ %>
                                    <div class="col"><h4>Related Adventures:</h4></div>
                                <% } %>
                                
                            </div>
                            <div class="row">
                                <% hike.relatedAdventures.forEach((b) => { %>
                                    <% let name;%>
                                    <% adventures.forEach((a) => { %>
                                        <%let stringId = a._id.toString() %>
                                        <%if(stringId === b.slice(-24)) name = a.name; %>
                                    <% }) %>
                                    <div class="col">
                                        <a href="<%=b%>"><%=name%></a>
                                    </div>
                                    <% })%>
                            </div>

                        </div>
                </div>
                


            </div>
        </div>
        
        

    </div><!---container-->
</div>
</body>


</html>
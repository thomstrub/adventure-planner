<body>
    <%- include('./partials/nav') %>

  <!-- Page Content -->

    <div class="container-flex login-bg">
    <div class="container index-bg">
        <div class="row">
            <div class="col-md-10 offset-1">
                <h1>Choose Your Adventure</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 offset-1">
                <div id="typeSelect">
                    <select class="form-control" id="typeSelectSelect">
                        <option value="hiking">Hiking</option>
                        <option value="backpacking">Backpacking</option>
                    </select>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-10 offset-1">
                <div id="hiking-form">
                    <%-include('./partials/hiking-form')%>
                </div>
        
                <div id="backpacking-form">
                    Back Packing
                    <%-include('./partials/backpacking-form')%>
        
                </div>
            </div>
        </div>
       
        
        
    
    </div>
    <!-- FOOTER -->
  <%- include('./partials/footer') %>
    </div><!---container-->
    
</body>



<script type="text/javascript">
    let select = document.getElementById('typeSelectSelect');
    let hikingForm = document.getElementById('hiking-form');
    let backpackingForm = document.getElementById('backpacking-form');
    backpackingForm.style.display = 'none';

    console.log(select);
    select.addEventListener('change', function (e){
        console.log(e.target.value, 'hitting target');
        let val = e.target.value;
        if(val === 'hiking'){
            backpackingForm.style.display = 'none';
            hikingForm.style.display = 'block';
        } else {
            backpackingForm.style.display = 'block';
            hikingForm.style.display = 'none';
        }
    })
    
</script>

